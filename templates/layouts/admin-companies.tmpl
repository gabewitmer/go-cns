
{{ define "title" }}Admin Companies{{ end }}
{{ define "navbar" }}
	{{ template "secure-admin-navbar" . }}
{{ end }}

{{ define "content" }}
	<div class="row">
		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li>
					<a href="/admin/home">Home</a>
				</li>
				<li class="active">
					Companies
				</li>
				<li>
					<a href="/admin/company/new"><i class="fa fa-plus">&nbsp;Add New</i></a>
				</li>
			</ol>
		</div>
		<!-- BREADCRUMB NAVIGATION -->

		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					All Companies
				</div>
				{{ if .companies }}
					<br>
					<table id="companies" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th></th>
								<th>Name</th>
								<th>Address</th>
								<th>URL</th>
							</tr>
						</thead>
						<tbody>
							{{ range $company := .companies }}
								<tr>
									<td><a href="/admin/company/{{ $company.Id }}" class="btn btn-primary btn-xs">Edit</a></td>
									<td>{{ $company.Name }}</td>
									<td>{{ $company.Street }} {{ $company.City }}</td>
									<td>
										{{ if $company.Feature }}
											{{ $company.Slug }} <a href="/{{ $company.Slug }}" target="_blank"> Visit</a>
										{{ else }}
											N/A
										{{ end }}
									</td>
								</tr>
							{{ end }}
						</tbody>
					</table>
				{{ else }}
					<div class="text-center panel-body">
						No Companies
					</div>
				{{ end }}
			</div>
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script src="/static/js/password.js"></script>
	<script src="/static/js/delete.js"></script>
	<script>
		$(document).ready(function() {
	   	$('#companies').DataTable();
		} );
	</script>
{{ end }}
