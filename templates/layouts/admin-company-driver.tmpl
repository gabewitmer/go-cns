{{ define "title" }}Driver{{ end }}

{{ define "navbar" }}
	{{ template "secure-admin-navbar" . }}
{{ end }}

{{ define "content" }}
	<div class="row">

		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li>
					<a href="/admin/home">Home</a>
				</li>
				<li>
					<a href="/admin/company">Companies</a>
				</li>
				<li>
					<a href="/admin/company/{{ .company.Id }}">{{ .company.Name }}</a>
				</li>
				<li class="active">
					Drivers
				</li>
				<li>
					<a href="/admin/company/{{ .company.Id }}/driver/new"><i class="fa fa-plus">&nbsp;Add New</i></a>
				</li>
			</ol>
		</div>
		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					All Drivers
				</div>
				{{ if .drivers }}
					<br>
					<table id="drivers" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>Id</th>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Status</th>
								<th>Address</th>
								<th>Manage Documents</th>
							</tr>
						</thead>
						<tbody>
							{{ $company := .company }}
							{{ range $driver := .drivers }}
								<tr>
									<td><a href="/admin/company/{{ $company.Id }}/driver/{{ $driver.Id }}" class="btn btn-primary btn-xs">{{ $driver.Id }}</a></td>
									<td>{{ $driver.FirstName }}</td>
									<td>{{ $driver.LastName }}</td>
									<td>
										{{ if eq $driver.Status 0 }}
											Unqualified
										{{ else if eq $driver.Status 1 }}
											Pending
										{{ else if eq $driver.Status 2 }}
											Denied
										{{ else if eq $driver.Status 3 }}
											Active
										{{ else if eq $driver.Status 4 }}
											Suspended
										{{ end }}
									</td>
									<td>{{ $driver.Street }} {{ $driver.City }}</td>
									<td class="text-center">
										<div class="btn-group btn-group-xs">
											<a href="/admin/driver/{{ $driver.Id }}/document" class="btn btn-default">Manage Documents</a>
										</div>
									</td>
								</tr>
							{{ end }}
						</tbody>
					</table>
				{{ else }}
					<div class="text-center panel-body">
						No Drivers
					</div>
				{{ end }}
			</div>
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script src="/static/js/password.js"></script>
	<script src="/static/js/delete.js"></script>
	<script>
		$(document).ready(function() {
    	$('#drivers').DataTable();
		} );
	</script>
{{ end }}
