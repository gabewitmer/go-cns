{{ define "title" }}Driver{{ end }}

{{ define "navbar" }}
	{{ template "secure-admin-navbar" . }}
{{ end }}

{{ define "content" }}
	<div class="row">

		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li>
					<a href="/">Home</a>
				</li>
				<li>
					<a href="/admin/company">Company</a>
				</li>
				<li>
					<a href="/admin/company/{{ .company.Id }}">{{ .company.Name }}</a>
				</li>
				<li class="active">
					Drivers
				</li>
				<li>
					<a href="/admin/company/{{ .company.Id }}/driver/new"><i class="fa fa-plus">&nbsp;Add New</i></a>
				</li>
			</ol>
		</div>
		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<legend>
				{{ .company.Name }}'s Drivers
			</legend>
			{{ if .drivers }}
				<table id="drivers" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Id</th>
							<th>First Name</th>
							<th>Last Name</th>
							<th>Address</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{{ $company := .company }}
						{{ range $driver := .drivers}}
							<tr>
								<td>
									<a href="/admin/company/{{ $company.Id }}/driver/{{ $driver.Id }}" class="btn btn-primary btn-xs">{{ $driver.Id }}</a>
								</td>
								<td>{{ $driver.FirstName }}</td>
								<td>{{ $driver.LastName }}</td>
								<td>{{ $driver.Street }} {{ $driver.City }}</td>
								<td class="text-center">
									<div class="btn-group btn-group-xs">
										<a href="/admin/driver/{{ $driver.Id }}/document" class="btn btn-default">Manage Documents</a>
									</div>
								</td>
							</tr>
						{{ end }}
					</tbody>
				</table>
			{{ else }}
				<div class="text-center panel-body">
					No Drivers
				</div>
			{{ end }}
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script src="/static/js/password.js"></script>
	<script src="/static/js/delete.js"></script>
	<script>
		$(document).ready(function() {
    	$('#drivers').DataTable();
		} );
	</script>
{{ end }}
