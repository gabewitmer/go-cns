
{{ define "title" }}Admin Vehicles{{ end }}
{{ define "navbar" }}
	{{ template "secure-admin-navbar" . }}
{{ end }}

{{ define "content" }}
	<div class="row">

		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li>
					<a href="/admin/home">Home</a>
				</li>
				<li class="active">
					Vehicles
				</li>
			</ol>
		</div>
		<!-- BREADCRUMB NAVIGATION -->

		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">All Vehicles</div>
				{{ if .vehicles }}
					<br>
					<table id="vehicles" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th></th>
								<th>Name</th>
								<th>Type</th>
								<th>Company</th>
							</tr>
						</thead>
						<tbody>
							{{ $companies := .companies }}
							{{ range $vehicle := .vehicles }}
								<tr>
									<td><a href="/admin/vehicle/{{ $vehicle.Id }}" class="btn btn-primary btn-xs">Edit</a></td>
									<td>{{ $vehicle.Name }}</td>
									<td>
										{{ if eq $vehicle.Type 0 }}
											Truck
										{{ else if eq $vehicle.Type 1 }}
											Trailer
										{{ else if eq $vehicle.Type 2 }}
											Bus
										{{ end }}
									</td>
									<td><a href="/admin/company/{{ $vehicle.CompanyId }}">{{ map $companies $vehicle.CompanyId }}</a></td>
								</tr>
							{{ end }}
						</tbody>
					</table>
				{{ else }}
					<div class="text-center panel-body">
						No Vehicles
					</div>
				{{ end }}
			</div>
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script src="/static/js/password.js"></script>
	<script src="/static/js/delete.js"></script>
	<script>
		$(document).ready(function() {
    	$('#vehicles').DataTable();
		} );
	</script>
{{ end }}
