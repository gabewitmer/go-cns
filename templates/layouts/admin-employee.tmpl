
{{ define "title" }}Admin Employee{{ end }}
{{ define "navbar" }}
	{{ template "secure-admin-navbar" . }}
{{ end }}

{{ define "content" }}
	<div class="row">

		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li>
					<a href="/admin/home">Home</a>
				</li>
				<li class="active">
					Employees
				</li>
				<li>
					<a href="/admin/employee/new"><i class="fa fa-plus">&nbsp;Add New</i></a>
				</li>
			</ol>
		</div>
		<!-- BREADCRUMB NAVIGATION -->

		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					Employees
				</div>
				{{ if .employees }}
					<br>
					<table id="employees" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th></th>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Address</th>
								<th>Role</th>
							</tr>
						</thead>
						<tbody>
							{{ $users := .users }}
							{{ range $employee := .employees }}
								<tr>
									<td>
										<a href="/admin/employee/{{ $employee.Id }}" class="btn btn-primary btn-xs">Edit</a>
									</td>
									<td>{{ $employee.FirstName }}</td>
									<td>{{ $employee.LastName }}</td>
									<td>{{ $employee.Street }} {{ $employee.City }}</td>
									<td>
										{{ map $users $employee.UserId }}
									</td>
								</tr>
							{{ end }}
						</tbody>
					</table>
				{{ else }}
					<div class="text-center panel-body">
						No Employees
					</div>
				{{ end }}
			</div>
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script src="/static/js/password.js"></script>
	<script src="/static/js/delete.js"></script>
	<script>
		$(document).ready(function() {
    	$('#employees').DataTable();
		} );
	</script>
{{ end }}
