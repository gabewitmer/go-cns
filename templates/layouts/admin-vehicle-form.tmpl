
{{ define "title" }}Admin Vehicle{{ end }}
{{ define "navbar" }}
	{{ template "secure-admin-navbar" . }}
{{ end }}

{{ define "content" }}
	<div class="row">

		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li>
					<a href="/admin/home">Home</a>
				</li>
				<li>
					<a href="/admin/vehicle">Vehicles</a>
				</li>
				<li class="active">
                    {{ .vehicle.Name }}
                </li>
			</ol>
		</div>
		<!-- BREADCRUMB NAVIGATION -->

		<div class="col-lg-4">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					Vehicle
					<a href="/admin/vehicle" class="btn btn-default btn-xs pull-right">Clear</a>
				</div>
				<div class="panel-body">
					<form class="form-horizontal" action="/admin/vehicle" method="post">
						<div class="form-group">
							<label class="control-label col-lg-4">Name</label>
							<div class="col-lg-8">
								<input type="text" name="name" class="form-control" value="{{ .vehicle.Name }}"/>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-lg-4">Type</label>
							<div class="col-lg-8">
								<select class="form-control" name="type">
									<option value="TRUCK" {{ if eq .vehicle.Type 0 }}selected{{ end }}>Truck</option>
									<option value="TRAILER" {{ if eq .vehicle.Type 1 }}selected{{ end }}>Trailer</option>
									<option value="BUS" {{ if eq .vehicle.Type 2 }}selected{{ end }}>Bus</option>
								</select>
							</div>
						</div>
						<div class="col-lg-12">
							<input type="hidden" name="id" value="{{ .vehicle.Id }}"/>
							<div class="form-group">
								<button class="btn btn-primary btn-block">Save</button>
							</div>
							{{ if .vehicle }}
								<div class="form-group">
									<a href="#" data-delete="/admin/vehicle/{{ .vehicle.Id }}" data-message="Are you sure you would like to permanently delete this vehicle?" class="btn btn-danger btn-block delete-button">Delete</a>
								</div>
							{{ end }}
						</div>
					</form>
				</div>
			</div>
		</div>

		<div class="col-lg-8">
			<div class="panel panel-default">
				<div class="panel-heading">All Vehicles</div>
				{{ if .vehicles }}
					<br>
					<table id="vehicles" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>Id</th>
								<th>Name</th>
								<th>Type</th>
								<th>Company</th>
							</tr>
						</thead>
						<tbody>
							{{ $companies := .companies }}
							{{ range $vehicle := .vehicles }}
								<tr>
									<td><a href="/admin/vehicle/{{ $vehicle.Id }}" class="btn btn-primary btn-xs">{{ $vehicle.Id }}</a></td>
									<td>{{ $vehicle.Name }}</td>
									<td>
										{{ if eq $vehicle.Type 0 }}
											Truck
										{{ else if eq $vehicle.Type 1 }}
											Trailer
										{{ else if eq $vehicle.Type 2 }}
											Bus
										{{ end }}
									</td>
									<td><a href="/admin/company/{{ $vehicle.CompanyId }}">{{ map $companies $vehicle.CompanyId }}</a></td>
								</tr>
							{{ end }}
						</tbody>
					</table>
				{{ else }}
					<div class="text-center panel-body">
						No Vehicles
					</div>
				{{ end }}
			</div>
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script src="/static/js/password.js"></script>
	<script src="/static/js/delete.js"></script>
	<script>
		$(document).ready(function() {
    	$('#vehicles').DataTable();
		} );
	</script>
{{ end }}
