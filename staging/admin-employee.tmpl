
{{ define "title" }}Employee{{ end }}
{{ define "navber" }}
	{{ template "secure-admin-navbar" . }}
{{ end }}

{{ define "content" }}
	<div class="row">

		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li>
					<a href="/">Home</a>
				</li>
				<li class="active">
					Employees
				</li>
				<li>
					<a href="/admin/employee/add"><i class="fa fa-plus">&nbsp;Add New</i></a>
				</li>
			</ol>
		</div>
		<!-- BREADCRUMB NAVIGATION -->

		<div class="col-lg-12">
		<legend>
			Employees
			<!--<a class="btn btn-default pull-right btn-xs" href="/employee/company/${(company.id)!}">Back to Company</a>-->
		</legend>
		<!--<div class="panel panel-default">-->
		<!--<div class="panel-heading clearfix">-->
		<!--${(company.name)!}'s Employees-->
		<!--<a class="btn btn-default pull-right btn-xs" href="/employee/company/${(company.id)!}">Back to Company</a>-->
		<!--</div>-->
			{{ if .drivers }}
				<!--<div class="table-responsive">-->
				<table id="employees" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Id</th>
							<th>First Name</th>
							<th>Last Name</th>
							<th>Address</th>
							<th>Role</th>
						</tr>
					</thead>
					<tbody>
						{{ $users := .users }}
						{{ range $employee := .employees }}
							<tr>
								<td>
									<a href="/admin/employee/{{ $employee.Id }}" class="btn btn-primary btn-xs">{{ $employee.Id }}</a>
								</td>
								<td>{{ $employee.FirstName }}</td>
								<td>{{ $employee.LastName }}</td>
								<td>{{ $employee.Street }} {{ $employee.City }}</td>
								{{ if eq $users[$employee.UserId].Role "employee" }}
									<td>Employee</td>
								{{ else if eq $users[$employee.UserId].Role "admin" }}
									<td>Admin</td>
								{{ end }}
							</tr>
						{{ end }}
					</tbody>
				</table>
				<!--</div>-->
			{{ else }}
				<div class="text-center panel-body">
					No Employees
				</div>
			{{ end }}
				<!--</div>-->
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script src="/static/js/password.js"></script>
	<script src="/static/js/delete.js"></script>
	<script>
		$(document).ready(function() {
    	$('#employees').DataTable();
		} );
	</script>
{{ end }}
