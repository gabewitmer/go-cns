
{{ define "title" }}Admin Vehicle{{ end }}
{{ define "navbar" }}
	{{ template "secure-admin-navbar" . }}
{{ end }}

{{ define "content" }}
	<div class="row">

		<!-- BREADCRUMB NAVIGATION -->
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li>
					<a href="/">Home</a>
				</li>
				<li class="active">
					Vehicles
				</li>
			</ol>
		</div>
		<!-- BREADCRUMB NAVIGATION -->

		<div class="col-lg-12">
			<legend>All Vehicles</legend>
			{{ if .vehicles }}
				<table id="vehicles" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th>Type</th>
							<th>Company</th>
						</tr>
					</thead>
					<tbody>
						{{ $users := .users }}
						{{ $companies := .companies }}
						{{ range $vehicle := .vehicles }}
							<tr>
								<td><a href="/admin/vehicle/{{ $vehicle.Id }}" class="btn btn-primary btn-xs">{{ $vehicle.Id }}</a></td>
								<td>{{ $vehicle.Name }}</td>
								<td>{{ $vehicle.Type }}</td>
								<td><a href="/admin/company/{{ $vehicle.CompanyId }}">{{ $companies[$vehicle.CompanyId].Name }}</a></td>
							</tr>
						{{ end }}
					</tbody>
				</table>
			{{ else }}
				<div class="text-center panel-body">
					No Vehicles
				</div>
			{{ end }}
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script src="/static/js/password.js"></script>
	<script src="/static/js/delete.js"></script>
	<script>
		$(document).ready(function() {
    	$('#vehicles').DataTable();
		} );
	</script>
{{ end }}
